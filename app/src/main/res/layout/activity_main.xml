<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etprn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:hint="PRN Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/etclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etprn"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:hint="Class"
        android:inputType="text" />

    <EditText
        android:id="@+id/etdiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etclass"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:hint="Div"
        android:inputType="text" />

    <EditText
        android:id="@+id/etyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etdiv"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:hint="Admission Year"
        android:inputType="number" />

    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etyear"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:hint="Name"
        android:inputType="text" />

    <Button
        android:id="@+id/binsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Insert"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/binsert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Select"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>